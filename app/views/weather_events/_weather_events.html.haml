%h1 Pop Table
= render 'weather_events/pop_table'

%table.table.table-condensed
  %tr
    %th Site
    %th Eventdate
    %th Duration
    %th Rainfall
    %th Inspected
    %th Qualifying
    %th
    %th
    %th

  - @weather_events.each do |weather_event|
    %tr
      %td= weather_event.site_id
      %td= weather_event.eventdate
      %td= weather_event.duration
      %td= weather_event.rainfall
      %td= weather_event.inspected
      %td= weather_event.qualifying
      %td= link_to 'Show', weather_event
      %td= link_to 'Edit', edit_weather_event_path(weather_event)
      %td= link_to 'Destroy', weather_event, data: { confirm: 'Are you sure?' }, :method => :delete

%br
