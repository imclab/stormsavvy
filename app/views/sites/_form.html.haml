= form_for @site do |f|
  -if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@f.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.eme ach do |msg|
          %li= msg
  %h3
    Summary
  .cf
    = f.label :name
    .input
      = f.text_field :name
  .cf
    = f.label :project_ea, 'Project EA'
    .input
      = f.text_field :project_ea
  .cf
    = f.label :costcode, 'Project Costcode'
    .input
      = f.text_field :costcode
  .cf
    = f.label :description, 'Project Description'
    .input
      = f.text_field :description

  .control-group
    = f.label :address_1, 'Site Address 1', :class => "control-label"
    .controls
      = f.text_field :address_1
  .control-group
    = f.label :address_2, 'Site Address 2', :class => "control-label"
    .controls
      = f.text_field :address_2
  .control-group
    = f.label :city, 'City', :class => "control-label"
    .controls
      = f.text_field :city
  .control-group
    = f.label :state, 'State', :class => "control-label"
    :plain
      (abbreviation, e.g. CA)
    .controls
      = f.text_field :state
      /= f.select :state, Carmen.states, {:include_blank => true}, :selected => f.object.state
  .control-group
    = f.label :zipcode, 'Zipcode', :class => "control-label"
    .controls
      = f.text_field :zipcode

  %h3
    Site Data
  .cf
    = f.label :risk_level, 'Risk Level'
    .input
      = f.text_field :risk_level
  .cf
    = f.label :wdid_number, 'WDID Number'
    .input
      = f.text_field :wdid_number
  .cf
    = f.label :construction_phase, 'Construction Phase'
    .input
      = f.text_field :construction_phase
  .cf
    = f.label :total_area, 'Total Area'
    :plain
      (decimal e.g. 0.50)
    .input
      = f.text_field :total_area
  .cf
    = f.label :total_dsa, 'Total DSA'
    :plain
      (decimal e.g. 0.50)
    .input
      = f.text_field :total_dsa
  .cf
    = f.label :current_dsa, 'Current DSA'
    :plain
      (decimal e.g. 0.50)
    .input
      = f.text_field :current_dsa
  .cf
    = f.label :inactive_dsa, 'Inactive DSA'
    :plain
      (decimal e.g. 0.50)
    .input
      = f.text_field :inactive_dsa
  .cf
    = f.label :time_since_last_storm, 'Time Since Last Storm'
    .input
      = f.text_field :time_since_last_storm
  .cf
    = f.label :precipitation_received, 'Precipitation Received During Last Storm'
    :plain
      (decimal e.g. 0.50)
    .input
      = f.text_field :precipitation_received
  %h3
    Contractor Information
  .cf
    = f.label :contractor_name, 'Contractor Name'
    .input
      = f.text_field :contractor_name
  .cf
    = f.label :contractor_address_1, 'Contractor Address 1'
    .input
      = f.text_field :contractor_address_1
  .cf
    = f.label :contractor_address_2, 'Contractor Address 2'
    .input
      = f.text_field :contractor_address_2
  .cf
    = f.label :contractor_city, 'Contractor City'
    .input
      = f.text_field :contractor_city
  .cf
    = f.label :contractor_state, 'Contractor State'
    .input
      = f.text_field :contractor_state
  .cf
    = f.label :contractor_zipcode, 'Contractor Zipcode'
    .input
      = f.text_field :contractor_zipcode

  %h3
    WPCM/QSP Information
  .cf
    = f.label :wpcm_name, 'WPCM Name'
    .input
      = f.text_field :wpcm_name
  .cf
    = f.label :wpcm_company, 'WPCM Company'
    .input
      = f.text_field :wpcm_company
  .cf
    = f.label :wpcm_phone, 'WPCM Phone Number'
    .input
      = f.text_field :wpcm_phone
  .cf
    = f.label :wpcm_emergency_phone, 'WPCM Emergency Phone Number'
    .input
      = f.text_field :wpcm_emergency_phone
  .cf
    = f.label :qsp_name, 'QSP Name'
    .input
      = f.text_field :qsp_name
  .cf
    = f.label :qsp_company, 'QSP Company'
    .input
      = f.text_field :qsp_company
  .cf
    = f.label :qsp_phone, 'QSP Phone Number'
    .input
      = f.text_field :qsp_phone
  .cf
    = f.label :qsp_emergency_phone, 'QSP Emergency Phone Number'
    .input
      = f.text_field :qsp_emergency_phone
  %h3
    Weekly Report Status
  .cf
    = f.label :permits, 'Permits'
    .input
      = f.text_field :permits
  .cf
    = f.label :resident_engineer_name, 'Resident Engineer Name'
    .input
      = f.text_field :resident_engineer_name
  .cf
    = f.label :structures_representative_name, 'Structures Representative Name'
    .input
      = f.text_field :structures_representative_name
  .cf
    = f.label :last_bmp_status, 'Last BMP Status Report Date (CEM 2034)'
    .input
      = f.date_select :last_bmp_status
  .cf
    = f.label :last_inspection, 'Last Weekly Inspection Date (CEM 2030)'
    .input
      = f.date_select :last_inspection
  .cf
    = f.label :last_corrective_action, 'Last Corrective Action Report Date (CEM 2035)'
    .input
      = f.date_select :last_corrective_action
  .cf
    = f.label :last_reap, 'Last REAP Report Date (CEM 2045)'
    .input
      = f.date_select :last_reap
  .cf
    = f.label :last_training, 'Last Training Report Date (CEM 2023/24)'
    .input
      = f.date_select :last_training
  .cf
    = f.label :last_weather_forecast, 'Last Weather Forecast Date (CEM 2040)'
    .input
      = f.date_select :last_weather_forecast
  .cf
    = f.label :last_sampling, 'Last Rain Event Sampling Date (CEM 2051/52)'
    .input
      = f.date_select :last_sampling

  .actions
    = f.submit 'Save', :class => "btn"
    = link_to 'Back', sites_path
