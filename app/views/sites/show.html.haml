%h2
  Site Information
%p#notice
  /= notice
  = button_to 'Delete This Site', site_path(@site), :method => :delete
  /= button_to 'Delete This Site', project_path(@site.project), :method => :delete
  = link_to 'Edit', edit_site_path(@site)
  /= link_to 'Edit', edit_project_site_path(@site.project, @site)
  \|
  = link_to 'Back', site_path(@site.id)
  /= link_to 'Back', project_path(@site.project_id)
  .container
    .row
      .span4
        %br
        %p
          = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@site.lat}%2C#{@site.long}"
        %p
          %b Project:
          = link_to @site.name, site_path(@site)
          /= link_to @site.project.name, project_path(@site.project)
        %p
          %b Site ID:
          = @site.id
        %p
          %b Site Name:
          = @site.name
        %p
          %b Description:
          = @site.description
        %p
          %b Costcode:
          = @site.costcode
        %p
          %b Size:
          = @site.size
        %p
          %b Exposed area:
          = @site.exposed_area
        %p
          %b Address 1:
          = @site.address_1
        %p
          %b Address 2:
          = @site.address_2
        %p
          %b City:
          = @site.city
        %p
          %b State:
          = @site.state
        %p
          %b Zipcode:
          = @site.zipcode
        %p
          %b Site Lat/Long:
          = @site.lat
          = @site.long
