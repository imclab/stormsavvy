!!!
%html{"ng-app" => "Site"}
  %head
    %title #{title}
    %link{:href => "https://plus.google.com/100567972543112604606", :rel => "publisher"}/

    = stylesheet_link_tag  "application", media: "all"
    = javascript_include_tag 'http://w.sharethis.com/button/buttons.js', :application

    /= stylesheet_link_tag :application
    /= javascript_include_tag "application", controller_name

    = csrf_meta_tag
    = render 'shared/google_analytics'
    %meta{:charset => "utf-8", :content => "width=device-width, initial-scale=1.0", :name => "viewport"}/

  %body{ template_id, template_class }
    %div
    /= render :partial => "shared/flash_messages", :locals => {:flash => flash}
    /- if user_signed_in?
    = render 'layouts/header'
    %br
    %br
    .container-fluid
      .container
        .row
          %br
          %br
          - flash.each do |name, msg|
            %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
              %a.close{"data-dismiss" => "alert"} Ã—
              = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
          = yield
    = render 'layouts/olark'
