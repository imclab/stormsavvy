= simple_nested_form_for @report do |f|
  -if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    =f.label :site_id
  .controls
    = f.text_field :site_id
  .control-group
    =f.label :inspection_type
  .controls
    = f.text_field :inspection_type
  .control-group
    =f.label :status
  .controls
    = f.text_field :status
  .actions
    = f.submit 'Save'
    = link_to 'Back', reports_path
  %br
